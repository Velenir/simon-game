extend partials/layout

block content				
	.outer#outer
		each value in ["top-left", "top-right", "bottom-left", "bottom-right"]
			.outer__corner(class="outer__corner--"+value)
		
		.outer__center
			.title Simon
				sup.title__copyright Â®				
			.controls
				.controls__ingame
					.rounds
						.rounds__display#display
						h4.label.rounds__label round
					.toggle.toggle--start
						button#start.toggle--start__button(type="button")
						h4.label.toggle--start__label Start
					div
						label.toggle.toggle--strict
							input#strict.toggle--strict__check(type="checkbox")
							span.toggle--strict__visible
						h4.label.toggle--strict__label Strict
				.controls__power
					h4.label.toggle--power__label Off
					label.toggle.toggle--power
						input#power.toggle--power__check(type="checkbox")
						span.toggle--power__visible
					h4.label.toggle--power__label On
			
			
